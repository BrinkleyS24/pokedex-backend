<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
<body>
    <%- include('./partials/header.ejs') %> 
    <h2>Edit Pokemon</h2>
    <form action="/pokemon/<%= id %>?_method=PUT " method="POST">
        Name: <input type="text" name="name" value="<%= data.name %>" /> <br>
        Image: <input type="text" name="img" value="<%= data.img %>" /> <br>
        ID: <input type="text" name="id" value="<%= data.id %>" /> <br>
        Type: <input type="text" name="type" value="<%= data.type %>"> <br>
        Stats <br>
        hp: <input type="text" name="hp" value="<%= data.stats.hp %>" /> <br>
        attack: <input type="text" name="attack" value="<%= data.stats.attack %>" /> <br>
        defense: <input type="text" name="defense" value="<%= data.stats.defense %>" /> <br>
        spattack: <input type="text" name="spattack" value="<%= data.stats.spattack %>" /> <br>
        spdefense: <input type="text" name="spdefense" value="<%= data.stats.spdefense %>" /> <br>
        speed: <input type="text" name="speed" value="<%= data.stats.speed %>" /> <br>
        <input type="submit" value="Update Pokemon" /> <br>
    </form>
</body>
</html>